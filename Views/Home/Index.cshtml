@model VerySimple.Models.IndexViewModel
<h1>HTTP request details</h1>

<table class="table table-table">
	<thead>
		<tr>
			<th>Key</th>
			<th>Value</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>Scheme</td>
			<td>@Model.Scheme</td>
		</tr>
		<tr>
			<td>IsHTTPS</td>
			<td>@Model.IsHttps</td>
		</tr>
		<tr>
			<td>Host</td>
			<td>@Model.Host</td>
		</tr>
		<tr>
			<td>Server hostname</td>
			<td>@Model.ServerHostName</td>
		</tr>
		<tr>
			<td>X-Forwarded-For</td>
			<td>@Model.XForwardedFor</td>
		</tr>
		<tr>
			<td>X-Forwarded-Proto</td>
			<td>@Model.XForwardedProto</td>
		</tr>
		<tr>
			<td>X-Forwarded-Port</td>
			<td>@Model.XForwardedPort</td>
		</tr>
		<tr>
			<td>Session value</td>
			<td>@Model.SessionValue</td>
		</tr>
	</tbody>
</table>

<form method="POST" action="@Url.Action("SetSessionValue")">
	<label for="sessionValue">Session value:</label> <input type="text" id="sessionValue" name="sessionValue" /><br />
	<input type="submit" value="Submit" />
</form>